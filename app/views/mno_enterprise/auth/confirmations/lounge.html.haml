.banners.promo.dark.darkblue.confirmation-lounge
  .container
    .row
      .col-md-8.col-md-offset-2
        .row
          .align-center
            %i.fa.fa-envelope
            %h4.bold Didn't receive the confirmation email?
            %h5 That's fine! Just check below that we got it right and hit resend!
          
          %div{ 'ng-init' => "email = '#{@resource.email}'"}
            = form_for(@resource, :as => resource_name, :url => user_confirmation_path, :html => { 'name' => 'form', :class => 'dark form-horizontal', :autocomplete => "off" }) do |f|
              - unless devise_error_messages!.empty?
                %div
                  .alert.alert-error
                    %button.close{ 'data-dismiss' => "alert" } Ã—
                    = devise_error_messages!
              .spacer2
              .form-group
                .col-sm-6.col-sm-offset-2
                  .input-prepend
                    = f.email_field :email, :placeholder => "Email", :required => true, 'ng-model' => 'email', :class => 'input-xlarge'
                .col-sm-2
                  %button{ :class => "btn btn-lg btn-dark", :type => "submit", 'ng-click' => 'hasClicked = true', 'ng-disabled' => 'form.$invalid', 'ng-hide' => 'hasClicked' } Resend!
                  %img{ class: 'loader-sm', 'ng-src' => asset_path('mno_enterprise/loader-32x32-bgmaindark.gif'), 'ng-show' => 'hasClicked' }

    .spacer2
    .row
      .col-md-12
        .align-center
          %h5
            Or if you prefer you can send an email to our
            = mail_to "support@changeme.com", "customer care service", subject: "Signup Verification"
            directly and we'll activate it for you.
